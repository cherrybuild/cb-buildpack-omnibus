#!/bin/bash

# fail fast
set -o errexit
set -o nounset
set -o pipefail

scriptname=$(basename $0)

if [ -f /etc/centos-release ]
then
  cat <<EOT
autoconf
automake
bison
byacc
elfutils
flex
gcc
gcc-c++
gettext
libtool
make
patch
patchutils
pkgconfig
redhat-rpm-config
rpm-build
ruby19-devel
tar
unzip
wget
EOT
elif [ -f /etc/debian_version ]
then
  cat <<EOT
build-essential
ccache
dpkg-dev
libncurses5-dev
libxml2-dev
libxslt1-dev
ruby1.9.3
unzip
wget
zlib1g-dev
EOT
fi
